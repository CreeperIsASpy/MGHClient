{
  "rewrites": [
    {
      "source": "/api-news/:match*",
      "destination": "https://news.bugjump.net/:match*"
    },
    {
      "source": "/((?!api-news/|api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api-news/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate=300" 
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "require-corp"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}